@page "/counter"

<h1>Counter</h1>

<p>Current count: <span class="@BackgroundColor">@currentCount</span></p>

<p>
    <input type="number" @onkeypress="KeyHandler" @onkeypress:preventDefault="true" @bind="@increment" />
</p>

<button disabled="@(currentCount >= 10)" class="btn btn-primary" @onclick="IncrementCount">Go Up</button>
<button disabled="@(currentCount <= 0)" class="btn btn-primary" @onclick="DecrementCount">Go Down</button>

@code {
    private int currentCount = 0;
    private int increment = 1;

    private void KeyHandler(KeyboardEventArgs e)
    {
        if (e.Key == "+") {
            IncrementCount();
        }
        else if (e.Key == "-") {
            DecrementCount();
        }
    }

    private void IncrementCount()
    {
        currentCount += increment;
    }

    private void DecrementCount()
    {
        currentCount -= increment;
    }

    private string BackgroundColor =>
    (currentCount % 2 == 0) ? "yellow-background" : "red-background";
}