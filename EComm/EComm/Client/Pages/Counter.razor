@page "/counter"

<h1>Counter</h1>

<p>Current count: <span class="@BackgroundColor">@currentCount</span></p>

<button disabled="@(currentCount >= 10)" class="btn btn-primary" @onclick="IncrementCount">Go Up</button>
<button disabled="@(currentCount == 0)" class="btn btn-primary" @onclick="@(() => currentCount--)">Go Down</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }

    private string BackgroundColor =>
        (currentCount % 2 == 0) ? "yellow-background" : "red-background";
}

